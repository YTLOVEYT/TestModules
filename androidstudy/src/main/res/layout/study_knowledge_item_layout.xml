<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:id="@+id/view_knowledge_space"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:background="#999999"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            >

            <View
                android:layout_width="1px"
                android:layout_height="0dp"
                android:id="@+id/view_knowledge_up"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#999999"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/iv_knowledge"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_circular_select"
                />

            <View
                android:layout_width="1px"
                android:layout_height="0dp"
                android:id="@+id/view_knowledge_down"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#999999"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/tv_knowledge_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="开发环境"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_knowledge_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingMultiplier="1.5"
                android:text="Android studio相关 Gradle 官方发布"
                android:textSize="14sp"

                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>