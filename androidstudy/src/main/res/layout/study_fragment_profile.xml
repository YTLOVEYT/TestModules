<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece5e5"
    android:orientation="vertical"
    tools:context=".ui.fragment.profile.ProfileFragment"
    >

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/st_profile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible"
            app:tl_divider_color="#ff0000"
            app:tl_divider_padding="10dp"
            app:tl_divider_width="1dp"
            app:tl_indicator_color="#ff0000"
            app:tl_indicator_corner_radius="5dp"
            app:tl_indicator_margin_left="5dp"
            app:tl_indicator_margin_right="5dp"
            app:tl_indicator_style="BLOCK"
            app:tl_textSelectColor="#ffffff"
            app:tl_textUnselectColor="#cccccc"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_profile_project"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>


</LinearLayout>